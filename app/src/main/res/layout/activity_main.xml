<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:gravity="center_horizontal"
    tools:context=".MainActivity"

    android:weightSum="1">

    <RadioGroup
        android:id="@+id/RadioGroup01"
        android:layout_width="wrap_content"
        android:layout_height="250dp"

        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginTop="175dp"

        android:layout_weight="0.86"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rdb8"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/RadioGroup01"
            android:checked="false"
            android:text="cayon" />

        <RadioButton
            android:id="@+id/rdb5"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/rdb4"

            android:layout_alignStart="@+id/RadioGroup01"
            android:checked="false"
            android:text="Yellow" />

        <RadioButton
            android:id="@+id/rdb6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rdb7"
            android:layout_alignStart="@+id/rdb7"

            android:checked="false"
            android:text="dark" />

        <RadioButton
            android:id="@+id/rdb7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rdb2"
            android:layout_alignStart="@+id/rdb2"
            android:checked="false"
            android:text="pink" />

        <RadioButton
            android:id="@+id/rdb2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnexit"
            android:layout_centerVertical="true"
            android:text="Green">

        </RadioButton>

        <RadioButton
            android:id="@+id/rdb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RadioGroup01"
            android:layout_alignStart="@+id/RadioGroup01"
            android:text="blue">

        </RadioButton>


        <RadioButton
            android:id="@+id/rdb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"

            android:layout_alignEnd="@+id/textView"
            android:checked="false"
            android:text="white" />

        <RadioButton
            android:id="@+id/rdb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rdb3"
            android:layout_alignStart="@+id/rdb6"
            android:text="RED">

        </RadioButton>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Warna"
        android:gravity="center"
        android:textSize="24dp"

        android:textStyle="bold"
        android:id="@+id/textView"
        android:background="#03feed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

     <Button

         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="keluar"

         android:id="@+id/btnexit"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="35dp"
         android:layout_alignEnd="@+id/txtwarna" />

    <TextView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Warna yang dipilih"
        android:gravity="center"
        android:id="@+id/txtwarna"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_above="@+id/btnexit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>

